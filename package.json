{
  "name": "wdocs",
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "bunx lefthook install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "bunx rimraf dist node_modules .turbo",
    "update:deps": "bunx taze -r -w",
    "check:unused": "bunx knip",
    "release": "bunx release-it",
    "review": "bun update:deps && bun lint && bun build"
  },
  "devDependencies": {
    "turbo": "^2.6.3"
  }
}

{
  "name": "wdocs",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "type": "module",
  "scripts": {
    "postinstall": "bunx taze -r -w -i",
    "prepare": "lefthook install",
    "dev": "turbo dev --ui=tui",
    "lint": "turbo lint",
    "build": "turbo build",
    "format": "turbo format",
    "test": "turbo test",
    "verify": "turbo verify",
    "watch": "turbo watch verify --ui=tui",
    "scan": "sg scan -r",
    "check:modules": "bunx node-modules-inspector"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "lefthook": "^2.0.13",
    "taze": "^19.9.2",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  }
}

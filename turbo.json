{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "globalDependencies": [
    "tsconfig.json",
    "bun.lockb"
  ],
  "concurrency": "32",
  "tasks": {
    "watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "prepare": {
      "cache": false
    },
    "format": {
      "dependsOn": [
        "^prepare"
      ]
    },
    "lint": {
      "dependsOn": [
        "^format"
      ],
      "cache": false
    },
    "test": {
      "dependsOn": [
        "^lint"
      ],
      "cache": true
    },
    "build": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": [
        ".output/**",
        "dist/**",
        "target/release/**"
      ],
      "cache": false
    },
    "verify": {
      "dependsOn": [
        "^test"
      ],
      "cache": false
    },
    "preview": {
      "dependsOn": [
        "^verify"
      ]
    },
    "clean": {}
  }
}
